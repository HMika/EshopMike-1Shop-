@model List<Models.Data.Products>
@{
    ViewData["Title"] = "News Page";
}


<div class="container" style="margin-top:30px; margin-bottom:10px">

    <main role="main">

        <div class="container">
            <img src="~/images/5.png" width="1080" />
        </div>

        <div class="row col-12" style="margin:10px">
            <div class="row col-4">
                <div col-2>
                    <i class="fa fa-truck fa-5x fa-flip-horizontal" style="margin-left:18px" aria-hidden="true"></i>
                </div>
                <div col-2 style="margin-left:5px">
                    <p style="color: pink;text-align:center">Free shipping</p>
                    <p style="text-align: center;margin-left:5px;">Free shipping on order</p>
                </div>
            </div>
            <div class="row col-4">
                <div col-2>
                    <i class="fa fa-headphones fa-5x" aria-hidden="true"></i>
                </div>
                <div col-2 style="margin-left:5px;">
                    <p style="color: pink;text-align:center">Free shipping</p>
                    <p style="text-align: center;margin-left:5px;">Free shipping on order</p>
                </div>
            </div>
            <div class="row col-4">
                <div col-2>
                    <i class="fa fa-unlock-alt fa-5x fa-flip-horizontal" aria-hidden="true"></i>
                </div>
                <div col-2>
                    <p style="color: pink;text-align: center;margin-left:5px">Free shipping</p>
                    <p style="text-align: center;margin-left:5px;">Free shipping on order</p>
                </div>
            </div>
        </div>

        <div class="container">
            <h3 style="text-align:center"><b>Arrivals Products</b></h3>

            <p style="text-align:center">Top Sell  Best Sellers New Arrivals</p>

        </div>

        <div class="album py-5 bg-light">
            <div class="container">

                <div class="row">
                    @{
                        int counter = 0;
                        foreach (var item in Model)
                        {
                            counter++;
                            if (counter == 7)
                            {
                                break;
                            }
                            <div class="col-md-4">
                                <div class="myProducts card mb-4 shadow-sm">
                                    <img src="@item.PhotoPath" width="305" />
                                     <div class="middle">
                                            @Html.ActionLink("Detail","Detail","Shop", new {id = item.Id, @class="btn btn-primary text" })
                                        </div>
                                    <div class="card-body">
                                        <p class="card-text" style="color:dimgray"><b>@item.NameOfProduct</b></p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                                <label style="color:pink"><b>@item.Price &nbsp;<a>$</a></b></label>
                                            </div>
                                        </div>
                                        <div class="row">

                                            @for (int i = 0; i < item.Rate; i++)
                                            {
                                                <img src="~/images/star.png" width="20" height="20" />
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    }

                </div>
            </div>
        </div>
    </main>

    <div class="row col-12" style="margin:10px">
        <div class="col-6">
            <img src="~/images/6.png" width="500" />
        </div>
        <div class="col-6">
            <img src="~/images/7.png" width="500" />
        </div>
    </div>

    <div class="row col-12" style="margin:10px">
        <div class="col-4">
            <h5><b>Top Rated</b></h5>
            <div>

            </div>

        </div>
        <div class="col-4">
            <h5><b>Featured</b></h5>
        </div>
        <div class="col-4">
            <h5><b>Bestseller Products</b></h5>
        </div>
    </div>
</div>
<div style="background-color: #ff9898; text-align:center; margin-top:20px; margin-bottom:0; height:350px">
    <div class="container">
        <br />
        <br />
        <br />
        <h5><b>Sign Up For Newsletters</b></h5>
        <h6>Be the first Sign up for newsletter today</h6>
        <br />
        <div class="row" style="margin-top:20px">
            <input type="text" size="100" placeholder="Your email address" style="margin-left:150px" /><h6 style="color:white">&nbsp; Subscribe !</h6>
        </div>

    </div>
</div>