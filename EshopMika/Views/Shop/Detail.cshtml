@model Models.Data.Products

<div class="container">
    @{
        if (TempData["TotalCountOfProducError"] != null)
        {
            <div class="alert alert-danger" role="alert">
                Pozor!  Max počet je prekročen..  zkuste prosím vybrat max @TempData["TotalCountOfProducError"].ToString()  kusu.
            </div>
        }

    }
    <div class="row flex-row-reverse">
        <div class="col-md-12 col-lg-6 col-12">


            <div class="featured-image">
                <div class="" id="ProductPhoto">
                    <img width="500" id="ProductPhotoImg" class="product-zoom product_variant_image" data-image-id="" alt="1. New and sale badge product" src="@Model.PhotoPath">
                </div>
            </div>


        </div>


        <div class="card col-md-12 col-lg-6 col-12">

            <input type="hidden" name="form_type" value="product"><input type="hidden" name="utf8" value="✓">
            <div id="product-content" class="product-detail-content">
                <br />
                <h2>@Model.NameOfProduct</h2>
                <br />
                @* Rate *@
                @for (int i = 0; i < Model.Rate; i++)
                {
                    <img src="~/images/star.png" width="20" height="20" />
                }

                @* Price *@
            </div>

            <p class="product-price product-price--big mb-10">
                <h2 style="color:pink">$@Model.Price</h2>
            </p>

            @* Details *@
            <div class="product-info-block mb-30">
                <div class="single-info">
                    <span class="title">Vendor:&nbsp; <span style="color:pink">@Model.Vendor</span></span>
                </div>
                <div class="single-info">
                    <span class="title">SKU:</span>
                    <span class="value" style="color:pink">@Model.Dph</span>
                </div><div class="single-info">
                    <span class="title">Availability:</span>

                    <span class="value stock-red" style="color:pink">In Stock</span>

                </div>
            </div>
            <br />
            <br />
            <br />
            @* Popis *@
            <div class="product-short-desc mb-25">
                <p>@Model.Description</p>

            </div>
            <br />


            <style>
                .product-variant-option .selector-wrapper {
                    display: none;
                }
            </style>
            <div class="quantity">

                @using (Html.BeginForm("CheckCountOfProduct", "Shop", FormMethod.Post))
                {
                    <div class="row">
                        <input type="text" class="form-control" name="id" value="@Model.Id" hidden />
                        <span class="quantity-title mr-20 product-quantity-action quantity-selector" style="margin-left:18px">Qty: &nbsp;</span>
                        <div class="pro-qty mr-15 mb-lg-20 mb-md-20 mb-sm-20 product-quantity-action quantity-selector">
                            <input type="number" min="1" name="quantity" class="form-control" required>

                        </div>
                        &nbsp;
                        <button type="submit" class="btn btn-outline-danger">Add to cart</button>
                    </div>
                }





                <br />
                <div class="social-share-buttons mt-20">

                    <div class="row" style="margin-left:18px">
                        <p style="color:gray;text-align:center">SHARE THIS POST</p>

                    </div>
                    <br />
                    <div class="row" style="margin-left:18px">
                        <a href="https://twitter.com/?lang=ru" class="fa fa-twitter"></a>
                        <a href="#" class="fa fa-facebook"></a>
                        <a href="#" class="fa fa-google"></a>
                        <a href="#" class="fa fa-pinterest"></a>
                    </div>

                </div>
                <br />
                <br />
                <div class="custom-payment-options">
                    <div class="social-share-buttons">
                        <h5> Guaranteed Checkout:</h5>
                    </div><div class="methods-of-payment">

                        <img src="//cdn.shopify.com/shopifycloud/shopify/assets/payment_icons/amazon-92e856f82cae5a564cd0f70457f11af4d58fa037cf6e5ab7adf76f6fd3b9cafe.svg" height="35" alt="amazon payments">
                        <img src="//cdn.shopify.com/shopifycloud/shopify/assets/payment_icons/visa-319d545c6fd255c9aad5eeaad21fd6f7f7b4fdbdb1a35ce83b89cca12a187f00.svg" height="35" alt="visa">
